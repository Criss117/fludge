    "db:migrate": "turbo -F @fludge/db db:migrate",
    "db:local": "turbo -F @fludge/db db:local"
  },
  "dependencies": {
    "@fludge/env": "workspace:*",
    "dotenv": "catalog:",
    "zod": "catalog:"
  },
  "devDependencies": {
    "@fludge/config": "workspace:*",
    "@types/node": "25.2.1",
    "turbo": "2.8.3",
    "typescript": "catalog:"
  },
  "packageManager": "bun@1.3.8"
