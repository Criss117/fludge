{
  "name": "fludge",
  "private": true,
  "workspaces": {
    "packages": [
      "apps/*",
      "packages/*"
    ],
    "catalog": {
      "dotenv": "17.2.4",
      "zod": "4.3.6",
      "typescript": "5",
      "@orpc/server": "1.13.4",
      "@orpc/openapi": "1.13.4",
      "@orpc/zod": "1.13.4",
      "better-auth": "1.4.18",
      "@types/express": "5.0.6",
      "@libsql/client": "0.17.0",
      "libsql": "0.5.22",
      "@orpc/tanstack-query": "1.13.4",
      "@orpc/client": "1.13.4",
      "@tanstack/react-query": "5.90.20",
      "@tanstack/react-form": "1.28.0",
      "@tanstack/react-table": "8.21.3",
      "@better-auth/expo": "1.4.18",
      "uuid": "13.0.0",
      "drizzle-orm": "0.45.1"
    }
